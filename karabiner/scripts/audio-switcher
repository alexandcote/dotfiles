on run argv
    if (item 1 of argv is equal to "1") then
        do shell script "/opt/homebrew/bin/SwitchAudioSource -t \"input\" -s \"USB audio CODEC\" && /opt/homebrew/bin/SwitchAudioSource -t \"output\" -s \"USB audio CODEC\""
    else if (item 1 of argv is equal to "2") then
        do shell script "/opt/homebrew/bin/SwitchAudioSource -t \"input\" -s \"Bose - Alex\" && /opt/homebrew/bin/SwitchAudioSource -t \"output\" -s \"Bose - Alex\""
    else if (item 1 of argv is equal to "3") then
        do shell script "/opt/homebrew/bin/SwitchAudioSource -t \"input\" -s \"Alexandre’s AirPods\" && /opt/homebrew/bin/SwitchAudioSource -t \"output\" -s \"Alexandre’s AirPods\""
    else if (item 1 of argv is equal to "4") then
        do shell script "/opt/homebrew/bin/SwitchAudioSource -t \"input\" -s \"MacBook Pro Microphone\" && /opt/homebrew/bin/SwitchAudioSource -t \"output\" -s \"MacBook Pro Speakers\""
    end if
end run