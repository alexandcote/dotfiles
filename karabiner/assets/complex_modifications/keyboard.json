{
  "title": "2KLOC",
  "rules": [
    {
      "description": "CapsLock to Hyper/Escape",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": ["right_command", "right_control", "right_option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "Arrow - Hyper",
      "manipulators": [
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Arrow - R-CTRL",
      "manipulators": [
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Shortcuts",
      "manipulators": [
        {
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "volume_increment"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "volume_decrement"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "slash",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "mute"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "rewind"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "consumer_key_code": "fast_forward"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_increment"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_decrement"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "equal_sign",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "illumination_increment"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "illumination_decrement"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Macros",
      "manipulators": [
        {
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/karabiner/scripts/audio-switcher 1"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/karabiner/scripts/audio-switcher 2"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/karabiner/scripts/audio-switcher 3"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "4",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/karabiner/scripts/audio-switcher 4"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
