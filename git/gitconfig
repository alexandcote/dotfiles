# This is Git's per-user configuration file.

[user]
    name = Alexandre Côté
    email = alex.cote@shopify.com
    signingkey = 0BF7EB13314D09C9

[init]
    defaultBranch = main

[color]
    diff = auto
    status = auto
    branch = auto
    sh = auto
    ui = true

[core]
    autocrlf = input
    excludesfile = /Users/alexandcote/.gitignore_global
    trustctime = false

[gpg]
    program = gpg

[commit]
    gpgsign = true

[fetch]
    prune = true

[stash]
    showPatch = true

[merge]
    verbosity = 5
    tool = diffmerge

[diff]
    verbosity = 5
    tool = tig
    compactionHeuristic = true

[branch]
    autosetupmerge = true

[push]
    default = tracking

[log]
    date = local
[pull]
    rebase = true

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[alias]
    # Add some aliases
    a = add -A
    c = checkout
    n = commit --amend --no-edit
    s = status -b -s --untracked-files=all
    l = log --graph --oneline --decorate
    f = fetch --verbose --prune
    r = rebase
    x = !fork commit
    pr = pull -v --rebase --prune
    hu = reset --hard @{u}
    ru = rebase @{u}
    ri = rebase --interactive
    rs = rebase --interactive --autosquash
    ci = commit -v
    cm = commit -v -m
    cf = commit -v --fixup
    br = branch -vv
    df = diff
    cp = cherry-pick
    dc = diff --cached
    pf = push --force-with-lease origin HEAD
    unstage = reset HEAD
    track = push -u origin HEAD
    rollback = reset --soft HEAD^1
    sw = !git switch $(git branch --sort=-creatordate | fzf | tr -d '^\\*|[:space:]')
    la = !git config --list | grep ^alias\\. | cut -c 7- | grep -Ei --color \"$1\" "#"
[include]
	path = /Users/alexandcote/.config/dev/gitconfig
