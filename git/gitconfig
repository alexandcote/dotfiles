# This is Git's per-user configuration file.

[user]
    name = Alexandre Côté
    email = a.cote@2kloc.com
    signingkey = 0BF7EB13314D09C9

[includeIf "gitdir:Shopify/**"]
    path = ~/.gitconfig.work

[color]
    diff = auto
    status = auto
    branch = auto
    sh = auto
    ui = true

[core]
    autocrlf = input
    excludesfile = /Users/alex/.gitignore_global
    trustctime = false

[commit]
    gpgsign = true

[fetch]
    prune = true

[stash]
    showPatch = true

[merge]
    verbosity = 5
    tool = diffmerge

[diff]
    verbosity = 5
    tool = tig
    compactionHeuristic = true
    algorithm = patience

[branch]
    autosetupmerge = true

[push]
    default = tracking

[log]
    date = local

[pull]
    rebase = true

[credential]
    helper = osxkeychain

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[protocol]
    version = 2

[alias]
    # Add some aliases
    a = add -A
    c = checkout
    n = commit --amend --no-edit
    s = status -b -s --untracked-files=all
    l = log --graph --oneline --decorate
    f = fetch --verbose --prune
    r = rebase
    x = !gittower $(git rev-parse --show-toplevel)
    pr = pull -v --rebase --prune
    hu = reset --hard @{u}
    ru = rebase @{u}
    ri = rebase --interactive
    ci = commit -v
    cm = commit -v -m
    br = branch -vv
    df = diff
    cp = cherry-pick
    dc = diff --cached
    pf = push --force-with-lease origin HEAD
    unstage = reset HEAD
    track = push -u origin HEAD
    rollback = reset --soft HEAD^1
    la = !git config --list | grep ^alias\\. | cut -c 7- | grep -Ei --color \"$1\" "#"
